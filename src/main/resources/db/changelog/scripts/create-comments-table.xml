<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="create_table_comments" author="apuchinec">
        <createTable tableName="comments">
            <column autoIncrement="true" name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="task_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="title" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamp" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="timestamp"/>
            <column name="content" type="text"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="comments" baseColumnNames="task_id" constraintName="FK_COMMENTS_TASK_ID" referencedTableName="tasks"
                                 referencedColumnNames="id"/>
        <addForeignKeyConstraint baseTableName="comments" baseColumnNames="user_id" constraintName="FK_COMMENTS_USER_ID"
                                 referencedTableName="users" referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>